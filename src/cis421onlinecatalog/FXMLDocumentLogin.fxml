            <VBox prefHeight="150.0" prefWidth="250.0">
               <children>
                  <HBox prefHeight="42.0" prefWidth="242.0">
                     <children>
                        <Label text="Username">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <padding>
                              <Insets right="30.0" />
                           </padding>
                        </Label>
                        <TextField fx:id="usernameField" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Password">
                           <padding>
                              <Insets right="34.0" />
                           </padding></Label>
                        <TextField fx:id="passwordField" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
